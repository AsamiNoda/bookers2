<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

   <body>
        <nav class="navbar navbar-fixed-top navbar-inverse">
          <div class="container">
            <div class="container-fluid">
              <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample">
                  <span class="sr-only">Toggle navigation</span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                </button>
                <nav class="nav navbar-nav navbar-right">
                <h4 class="header">Bookers</h4>
                </nav>
              </div>

              <div class="collapse navbar-collapse" id="navbarEexample">
                <ul class="nav navbar-nav navbar-right">
                   <% if user_signed_in? %>

                  <li><%= link_to user_path(current_user.id) do %>
                    <span class="glyphicon glyphicon-home" aria-hidden="true"></span>  Home
                  <% end %>
                </li>
                  <li><%= link_to users_path do %>
                    <span class="glyphicon glyphicon-user" aria-hidden="true"></span> Users
                    <% end %>
                  </li>
                  <li><%= link_to books_path do %>
                    <span class="glyphicon glyphicon-book" aria-hidden="true"></span> Books
                    <% end %>
                  </li>
                  <li><%= link_to destroy_user_session_path, method: :delete do %>
                    <span class="glyphicon glyphicon-log-out" aria-hidden="true" ></span> logout
                    <% end %>
                  </li>
                  <% else %>
                   <li><%= link_to root_path do %>
                    <span class="glyphicon glyphicon-home" aria-hidden="true"></span>  Home
                  <% end %>
                   </li>
                  <li><%= link_to home_about_path do %>
                    <span class="glyphicon glyphicon-link" aria-hidden="true"></span> About
                    <% end %>
                  </li>
                  <li><%= link_to new_user_registration_path do %>
                    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> sign up
                    <% end %>
                  </li>
                  <li><%= link_to new_user_session_path do %>
                    <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span> login
                    <% end %>
                  </li>

                   <% end %>
              </uls>
            </div>
          </div>
        </nav>



      <main class="container clearfix">
        <div class="row">
        <%= yield %>
        </div>
      </main>

      <footer class="footer">
        <div class="row">
        <p class="col-md-3 col-xs-offset-9">CopyRight Infratop.inc</p>
        </div>
      </footer>

  </body>
</html>
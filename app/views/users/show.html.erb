<div class="notice">
	<% if flash[:notice] %>
	  <p><%= flash[:notice] %></p>
	<% end %>
	</div>
<%= render 'books/list', book: @book, user: @user %>

	<div class="pull-left clarfix col-xs-9">
		<h2>Books</h2>
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
				</tr>
			</thead>
			<tbody>
			<% @books.each do |book| %>
				<tr>
					<td><%= link_to attachment_image_tag @user, :profile_image, format: 'jpeg', size: "40x40", fallback: "no_image.jpg" %></td>
					<td><%= link_to book.title, book_path(book) %></td>
					<td><%= book.body %></td>
				</tr>
			<% end %>
			</tbody>
		</table>
	</div>
